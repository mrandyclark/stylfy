<h1>Signup</h1>
<p>(did you need to <a href="/login">login</a>?)</p>

<% @user.password = @user.password_confirmation = nil %>

<%= error_messages_for :user %>
<% form_for :user, :url => users_path do |f| -%>
<p><%= label_tag 'login' %><br/>
<%= f.text_field :login, :class => "input_text" %></p>

<p><%= label_tag 'email' %><br/>
<%= f.text_field :email, :class => "input_text" %></p>

<p><%= label_tag 'password' %><br/>
<%= f.password_field :password, :class => "input_text" %></p>

<p><%= label_tag 'password_confirmation', 'Confirm Password' %><br/>
<%= f.password_field :password_confirmation, :class => "input_text" %></p>
 
<p><%= submit_tag 'Sign up', :class => "submit_button" %></p>
<% end -%>
