<h1>Show your style with a new outfit.</h1>

<% form_for(:outfit, :url => outfits_path, 
                      :html => { :multipart => true }) do |f| -%>

  <%= f.error_messages %>
	
  <div class="form_field">
    <%= f.label :outfit_photo %><br />
	<%= f.file_field :outfit_photo %>
  </div>

  <div class="form_field">
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </div>

  <div class="form_field">
	<%= f.label "What are you wearing?" %>
	<div class="help_text">(comma seperated list, ex. "H&M, black tie, jeans, vest")</div>
	<%= text_field :tags, :tags %>
  </div>

  <div class="form_field">
    <%= f.submit "Create" %>
  </div>
<% end %>

<%= link_to 'Back', outfits_path %>