<h1>New outfit</h1>

<% form_for(@outfit) do |f| %>
  <%= f.error_messages %>
  <%= error_messages_for :photo %>	
  <p>
	<label>Photo</label><br />
  	<%= file_field :photo, :file %>
  </p>

  <p>
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', outfits_path %>
