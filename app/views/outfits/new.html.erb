<h1>New outfit</h1>

<% form_for(:outfit, :url => outfits_path, 
                      :html => { :multipart => true }) do |f| -%>


  <%= f.error_messages %>
	
  <p>
    <%= f.label :outfit_photo %><br />
	<%= f.file_field :outfit_photo %>
	</p>

  <p>
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </p>

  <p>
	<label>Tags</label><br />
	<% for tag in Tag.find(:all )%>
	<div>
	  <%= check_box_tag "outfit[tag_ids][]", tag.id, @outfit.tags.include?(tag) %>
	  <%= tag.name %>
	</div>
	<% end %>
	Add your own (comma separated): <%= text_field :tags, :tags %>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', outfits_path %>