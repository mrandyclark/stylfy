<h1>New outfit</h1>

<% form_for(:outfit, :url => outfits_path, 
                      :html => { :multipart => true }) do |f| -%>


  <%= f.error_messages %>
  <%= error_messages_for :photo %>
	
  <p>
	<label>Photo</label><br />
  	<%= file_field :photo, :uploaded_data %>
  </p>

  <p>
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </p>

  <p>
	<%= text_field :tags, :tags %>
  <p>
	<label>Tags (comma separated)</lablel><br />
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', outfits_path %>